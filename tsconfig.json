{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "CommonJS",
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "outDir": "./dist",
      "rootDir": "./",
      "declaration": true,
      "sourceMap": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  